<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorApp.App"
             >
    
    <Application.Resources>
        <!-- style resources for the whole project-->
        <ResourceDictionary>
            <Style x:Key="entryStyle" TargetType="Entry">
                <Setter Property="FontSize" Value="Medium">
                </Setter>
                <Setter Property="TextColor" Value="Brown">
                </Setter>
            </Style>
            <Style x:Key="pageStyle" TargetType="Page">
                <Setter Property="BackgroundColor" Value="DarkSlateGray"/>
            </Style>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="MediumSeaGreen"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="Large"/>
            </Style>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="TextColor" Value="BurlyWood"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="BackgroundColor" Value="DarkRed"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>