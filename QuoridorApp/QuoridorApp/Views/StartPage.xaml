<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:QuoridorApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorApp.Views.StartPage"
             Style="{DynamicResource pageStyle}">

    <!-- Binding to "StartPageViewModel" -->
    <ContentPage.BindingContext>
        <local:StartPageViewModel></local:StartPageViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style x:Key="TitleLabel" TargetType="Label">
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="TextColor" Value="Chocolate"/>
            <Setter Property="BackgroundColor" Value="Firebrick"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <!--<Setter Property="HorizontalOptions" Value="Center"/> -->

        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        
        <StackLayout>
            <Label Text="Quoridor" Style="{StaticResource TitleLabel}" />
            <!--<Label Text="Quoridor"  Style="{StaticResource StandardLabelStyle}"/> -->
            <Button Text="Sign In" Command="{Binding ToSignInCommand}"/>
            <Button Text="Sign Up" Command="{Binding ToSignUpCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>