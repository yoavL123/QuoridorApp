<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:QuoridorApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorApp.Views.SignIn"
             Style="{DynamicResource pageStyle}"
             >
    <!-- Binding to "SignInViewModel" -->
    <ContentPage.BindingContext>
        <local:SignInViewModel></local:SignInViewModel>
    </ContentPage.BindingContext>
    

    <ContentPage.Content>
        <StackLayout>
            <Button Text="Back to main page" Command="{Binding ToStartPageCommand}" />
            <Label Text="Sign In"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   Style="{DynamicResource labelStyle}"/>
            <Frame>
                <StackLayout>
                    <Entry x:Name="UserName" Text="{Binding UserName}" Placeholder="Enter username..." />
                    <Entry x:Name="PlayerPass" Text="{Binding PlayerPass}" Placeholder="Enter password..." />
                </StackLayout>
            </Frame>
            <Button Command="{Binding SubmitSignInCommand}" Text="Sign In!" Style="{DynamicResource buttonStyle}" />
        </StackLayout>


    </ContentPage.Content>
</ContentPage>