<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:QuoridorApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorApp.Views.RatingChangePage"
             Style="{DynamicResource pageStyle}">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Winner:"/>
            <Label Text="{Binding Winner}"/>
            <Label Text="Initial Rating:"/>
            <Label Text="{Binding WinnerInitRating}"/>

            <Label Text="Loser:"/>
            <Label Text="{Binding Loser}"/>
            <Label Text="Initial Rating:"/>
            <Label Text="{Binding LoserInitRating}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>